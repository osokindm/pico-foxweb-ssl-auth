{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PICOFoxweb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/PICOFoxweb",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // Путь к gdb (проверьте через `which gdb`)
            "setupCommands": [
                {
                    "description": "Включить pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}